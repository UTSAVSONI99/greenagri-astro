---
import OtherPageLayout from "../layouts/OtherPageLayout.astro";
---

<OtherPageLayout>
    <!-- Hero Section -->
    <section
        class="relative bg-cover bg-center h-[400px]"
        style="background-image: url('/bgproduct.avif');"
    >
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>

        <div
            class="relative max-w-7xl mx-auto flex flex-col justify-center h-full px-6 lg:px-8"
        >
            <div data-aos="fade-up" data-aos-delay="300">
                <p
                    class="text-[#FF8F00] font-semibold text-xl tracking-wider mb-2"
                >
                    Product
                </p>
                <h1 class="text-white text-3xl lg:text-5xl font-extrabold">
                    Over Five Varieties Of Paddy and Rice Product
                </h1>
            </div>
        </div>
    </section>

    <!-- Description -->
    <section
        class="relative -translate-y-1/2 z-20 bg-[#F5F5DC] max-w-7xl mx-auto py-6 px-4 lg:px-8 rounded-full border border-[#4B4B4B]"
    >
        <div class="max-w-4xl mx-auto">
            <p class="text-center text-gray-700 text-lg">
                Our commitment to excellence begins in the field, mastered in
                our mill, and reflected in the quality of each rice product we
                produce.
            </p>
        </div>
    </section>

    <!-- Product Sections (Each Product) -->
    <section>
        <!-- firstpart -->
        <div
            class="flex flex-col lg:flex-row max-w-7xl mx-auto gap-12 lg:gap-52 items-center"
            data-aos="fade-up"
            data-aos-duration="1200"
        >
            <!-- Text Content -->
            <div class="max-w-2xl grid grid-cols-1 gap-6">
                <h2
                    class="text-[#558B2F] text-lg md:text-xl lg:text-3xl font-semibold"
                >
                    Boiled IR
                </h2>
                <p class="text-base text-[#4B4B4B]">
                    We specialize in providing premium-quality Boiled IR Rice,
                    meticulously processed to meet global industry standards.
                </p>
            </div>

            <!-- Image Section -->
            <div
                class="w-full sm:w-[400px] md:w-[450px] lg:w-[500px] h-[400px] mt-8 lg:mt-0"
            >
                <img
                    src="product-1.png"
                    alt="Boiled IR Rice"
                    class="w-full h-full object-cover border shadow-md"
                />
            </div>
        </div>

        <!-- secondpart -->
        <div
            class="flex flex-col lg:flex-row max-w-7xl mx-auto gap-12 lg:gap-52 items-center my-16"
            data-aos="fade-up"
            data-aos-duration="1200"
        >
            <!-- Image Section -->
            <div
                class="w-full sm:w-[400px] md:w-[450px] lg:w-[500px] h-[400px] mt-8 lg:mt-0"
            >
                <img
                    src="product-2.png"
                    alt="Boiled Swarna Rice"
                    class="w-full h-full object-cover border shadow-md"
                />
            </div>

            <!-- Text Content -->
            <div
                class="max-w-2xl grid grid-cols-1 gap-6 text-center lg:text-left"
            >
                <h2
                    class="text-[#558B2F] text-lg md:text-xl lg:text-3xl font-semibold"
                >
                    Boiled Swarna Rice
                </h2>
                <p class="text-base text-[#4B4B4B]">
                    We process Boiled Swarna Rice with precision, ensuring it
                    meets the highest standards for the global market.
                </p>
            </div>
        </div>

        <!-- thirdpart -->
        <div
            class="flex flex-col lg:flex-row max-w-7xl mx-auto gap-12 lg:gap-52 items-center"
            data-aos="fade-up"
            data-aos-duration="1200"
        >
            <!-- Text Content -->
            <div class="max-w-2xl grid grid-cols-1 gap-6">
                <h2
                    class="text-[#558B2F] text-lg md:text-xl lg:text-3xl font-semibold"
                >
                    White Broken Rice
                </h2>
                <p class="text-base text-[#4B4B4B]">
                    We ensure that every batch of White Broken Rice meets
                    rigorous quality standards.
                </p>
            </div>

            <!-- Image Section -->
            <div
                class="w-full sm:w-[400px] md:w-[450px] lg:w-[500px] h-[400px] mt-8 lg:mt-0"
            >
                <img
                    src="product-3.png"
                    alt="White Broken Rice"
                    class="w-full h-full object-cover border shadow-md"
                />
            </div>
        </div>

        <!-- fourthpart -->
        <div
            class="flex flex-col lg:flex-row max-w-7xl mx-auto gap-12 lg:gap-52 items-center my-16"
            data-aos="fade-up"
            data-aos-duration="1200"
        >
            <!-- Image Section -->
            <div
                class="w-full sm:w-[400px] md:w-[450px] lg:w-[500px] h-[400px] mt-8 lg:mt-0"
            >
                <img
                    src="product-4.png"
                    alt="White Rice"
                    class="w-full h-full object-cover border shadow-md"
                />
            </div>

            <!-- Text Content -->
            <div
                class="max-w-2xl grid grid-cols-1 gap-6 text-center lg:text-left"
            >
                <h2
                    class="text-[#558B2F] text-lg md:text-xl lg:text-3xl font-semibold"
                >
                    White Rice
                </h2>
                <p class="text-base text-[#4B4B4B]">
                    We ensure that every batch of White Rice meets rigorous
                    quality standards.
                </p>
            </div>
        </div>
    </section>
</OtherPageLayout>
