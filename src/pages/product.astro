---
import { Image } from "astro:assets";
import OtherPageLayout from "../layouts/OtherPageLayout.astro";
import Navbar from "../components/AnotherNav";
---

<OtherPageLayout>
  <!-- Hero Section -->
  <section
    class="relative bg-cover bg-center h-[450px] md:h-[500px] lg:h-[600px] flex items-center"
    style="background-image: url('/bgproduct.avif');"
  >
    <div class="absolute inset-0 bg-black bg-opacity-60"></div>

    <div
      class="relative max-w-7xl mx-auto flex flex-col justify-center h-full px-6 sm:px-10 lg:px-12"
    >
      <div data-aos-delay="300">
        <p
          class="text-[#FF8F00] font-semibold text-lg sm:text-xl tracking-wide mb-3"
          data-aos="fade-up"
        >
          Our Premium Products
        </p>
        <h1
          class="text-white text-3xl sm:text-4xl lg:text-5xl font-extrabold leading-tight"
          data-aos="fade-up"
          data-aos-delay="100"
        >
          Explore Our High-Quality Rice Varieties
        </h1>
      </div>
    </div>
  </section>

  <!-- Description -->
  <section class="relative -translate-y-1/2 z-20 px-4 sm:px-6">
    <div
      class="bg-[#F5F5DC] max-w-6xl mx-auto py-8 px-6 sm:px-10 lg:px-12 rounded-xl border border-[#4B4B4B] shadow-lg"
      data-aos="fade-up"
      data-aos-delay="300"
    >
      <p class="text-center text-gray-700 text-base sm:text-lg leading-relaxed">
        Our commitment to excellence starts from the fields and is perfected in our mills, ensuring superior quality in every grain.
      </p>
    </div>
  </section>

  <!-- Product Sections -->
  <section class="space-y-16 sm:space-y-20 lg:space-y-24 py-10 sm:py-14 lg:py-20 px-4 sm:px-6">
    <!-- Product Template -->
    {[
      {
        title: "Boiled IR Rice",
        description: "We specialize in providing premium-quality Boiled IR Rice, meticulously processed to meet global industry standards.",
        image: "/product-1.png",
        aosText: "fade-right",
        aosImage: "fade-left",
      },
      {
        title: "Boiled Swarna Rice",
        description: "We process Boiled Swarna Rice with precision, ensuring it meets the highest standards for the global market.",
        image: "/product-2.png",
        aosText: "fade-left",
        aosImage: "fade-right",
      },
      {
        title: "White Broken Rice",
        description: "Every batch of White Broken Rice meets rigorous quality standards to ensure the best taste and nutrition.",
        image: "/product-3.png",
        aosText: "fade-right",
        aosImage: "fade-left",
      },
      {
        title: "White Rice",
        description: "We ensure that every batch of White Rice meets the highest quality standards for a superior culinary experience.",
        image: "/product-4.png",
        aosText: "fade-left",
        aosImage: "fade-right",
      },
    ].map((product, index) => (
      <div
        key={index}
        class={`flex flex-col-reverse lg:flex-row ${
          index % 2 === 0 ? "lg:flex-row" : "lg:flex-row-reverse"
        } max-w-7xl mx-auto gap-8 lg:gap-16 items-center`}
      >
        <!-- Text Content -->
        <div class="max-w-2xl space-y-4" data-aos={product.aosText}>
          <h2 class="text-[#558B2F] text-xl sm:text-2xl lg:text-3xl font-bold">
            {product.title}
          </h2>
          <p class="text-base sm:text-lg text-[#4B4B4B] leading-relaxed">
            {product.description}
          </p>
        </div>

        <!-- Image Section -->
        <div
          class="w-full sm:w-[350px] md:w-[400px] lg:w-[450px] h-[350px] md:h-[400px] lg:h-[450px] flex justify-center"
          data-aos={product.aosImage}
        >
          <img
            src={product.image}
            alt={product.title}
            class="w-full h-full object-cover border shadow-md rounded-lg"
          />
        </div>
      </div>
    ))}
  </section>
</OtherPageLayout>
